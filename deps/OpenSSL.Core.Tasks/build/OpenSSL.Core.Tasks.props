<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">
  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net46</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\bin\$(Configuration)\$(TaskFolder)\OpenSSL.Core.Tasks.dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="OpenSSL.Core.Tasks.WebDownload" AssemblyFile="$(TaskAssembly)" />
  <UsingTask TaskName="OpenSSL.Core.Tasks.Unzip" AssemblyFile="$(TaskAssembly)" />
</Project>